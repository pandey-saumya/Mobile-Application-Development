<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:id="@+id/imageShare"
                    android:layout_width="242dp"
                    android:layout_height="222dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerCrop" />

                <EditText
                    android:id="@+id/caption"
                    android:layout_width="245dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="-174dp"
                    android:layout_toStartOf="@+id/imageShare"
                    android:background="@null"
                    android:hint="Caption ..."
                    android:layout_toLeftOf="@+id/imageShare"
                    android:layout_marginRight="-174dp" />

                <CheckBox
                    android:id="@+id/geoShare"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="190dp"
                    android:layout_marginStart="18dp"
                    android:onClick="onCheckboxClicked"
                    android:text="Share my location"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="18dp" />

                <Button
                    android:id="@+id/tvShare"
                    android:layout_width="93dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:text="Share"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:background="@drawable/regbutton"
                    android:textSize="20sp"

                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true" />


                <TextView
                    android:id="@+id/wfShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/geoShare"
                    android:layout_marginEnd="55dp"
                    android:text="Share via Wifi"
                    android:textSize="15sp"
                    android:layout_marginRight="55dp"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="118dp"
                    android:layout_marginStart="28dp"
                    tools:ignore="NotSibling"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="28dp" />
            </RelativeLayout>



        </RelativeLayout>

</RelativeLayout>