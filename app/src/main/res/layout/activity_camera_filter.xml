<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".camera.FilterActivity">



    <ImageView
        android:id="@+id/picture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/filter_scroll"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter">

    </ImageView>

    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back"
        android:scaleType="fitCenter" />

    <Button
        android:id="@+id/next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        android:text="next" />

    <HorizontalScrollView
        android:id="@+id/filter_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/filter_bottom_navigation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:background="@android:color/background_light"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/origin"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/og" />

                <TextView

                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/filter_image"
                    android:layout_centerHorizontal="false"
                    android:gravity="center"
                    android:text="Original"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:textIsSelectable="false"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/neon"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/clarendon" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/filter_image"
                    android:layout_centerHorizontal="false"
                    android:gravity="center"
                    android:text="Clarendon"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:textIsSelectable="false"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/yellow"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/oldman" />

                <TextView

                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/filter_image"
                    android:layout_centerHorizontal="false"
                    android:gravity="center"
                    android:text="Old Man"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:textIsSelectable="false"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/black"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/adele" />

                <TextView

                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/filter_image"
                    android:layout_centerHorizontal="false"
                    android:gravity="center"
                    android:text="Adele"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:textIsSelectable="false"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/awe"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/audrey" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/filter_image"
                    android:layout_centerHorizontal="false"
                    android:gravity="center"
                    android:text="Audrey"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:textIsSelectable="false"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/nigth_wh"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/cruz" />

                <TextView

                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/filter_image"
                    android:layout_centerHorizontal="false"
                    android:gravity="center"
                    android:text="Cruz"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:textIsSelectable="false"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/lime_stur"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="?android:selectableItemBackground"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/lime" />

                <TextView

                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/filter_image"
                    android:layout_centerHorizontal="false"
                    android:gravity="center"
                    android:text="Lime"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:textIsSelectable="false"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </HorizontalScrollView>


    <LinearLayout
        android:id="@+id/filter_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@android:color/background_light">

        <Button
            android:id="@+id/filter_navi"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:text="Filter"
            android:textSize="12sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/edit_navi"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:text="Edit"
            android:textSize="12sp"
            android:textStyle="bold|italic" />

    </LinearLayout>


</RelativeLayout>